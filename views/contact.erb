<% if form.failed? %>
<div class="u-mt-s">
  <div class="alert alert--error">
    <div class="alert__header">
    <% if form.failed_fields.size == 1 %>
      <h1 class="alert__title venus"><%= I18n.t 'contact_alert_heading1a' %> 1 <%= I18n.t 'contact_alert_heading1b' %></h1>
    <% else %>
      <h1 class="alert__title venus"><%= I18n.t 'contact_alert_heading1a' %> <%= form.failed_fields.size %> <%= I18n.t 'contact_alert_heading1c' %></h1>
    <% end %>
    </div>
    <div class="alert__body">
      <p class="mars"><%= I18n.t 'contact_alert_paragraph1' %></p>
      <ul class="list list--bare">
    <% form.failed_fields.each.with_index(1) do |field_name, i| %>
        <li class="list__item mars"><%= i %>)
      <% if field_name == :postcode %>
        <% if form.failed_on?(:postcode, :present) %>
          <a class="js-inpagelink" href="#<%= field_name %>"><%= I18n.t 'contact_field_mandatory' %></a>
        <% elsif form.failed_on?(:postcode, :regexp) %>
          <a class="js-inpagelink" href="#<%= field_name %>"><%= I18n.t 'contact_field_postcode_invalid' %></a>
        <% end %>
      <% elsif field_name == :mobile %>
        <% if form.failed_on?(:mobile, :present) %>
          <a class="js-inpagelink" href="#<%= field_name %>"><%= I18n.t 'contact_field_mandatory' %></a>
        <% elsif form.failed_on?(:mobile, :regexp) %>
          <a class="js-inpagelink" href="#<%= field_name %>"><%= I18n.t 'contact_field_mobile_invalid' %></a>
        <% end %>
      <% else %>
        <a class="js-inpagelink" href="#<%= field_name %>"><%= I18n.t 'contact_field_mandatory' %></a>
      <% end %>
        </li>
    <% end %>
      </ul>
    </div>
  </div>
</div>
<% end %>

